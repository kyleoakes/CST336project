   <%- include('partials/header.ejs') %>
   <%- include('partials/navbar.ejs') %>
        
      <!-- A Container for Login Display -->
      <div class="user-forms">
         <!-- brand logo -->
         <a class="form-logo" href="/">
            <img src="img/wizard_hat.png" width="60" height="60" 
               class="d-inline-block align-top" alt="The Sourcerer's Source brand logo">
         </a>
            
         <!-- An Inner Container for the Form -->
         <div>
            <!-- Login form -->
            <form method="POST">
               <h1> Log in to your account </h1>
               <br />
               <!-- username -->
               <div>
                  <img src="img/user.png" width="30" height="30" 
                     class="d-inline-block align-top" alt="person outline">
                  <input type="text" name="username"
                     placeholder="Enter a Username">
               </div>
               <!-- password -->
               <div>
                  <img src="img/lock.png" width="30" height="30" 
                     class="d-inline-block align-top" alt="lock outline">
                  <input type="password" name="password" 
                     placeholder="Enter a Password">
               </div>
               <br />
               <br />
               <!-- submit form -->
               <input id="loginButton" type="submit" value="Log In" />
               <br>  
            </form> <!-- login form ends -->
            
            <!-- wrong credentials error -->
            <% if (typeof loginError != "undefined" && loginError) { %>
               <h3 class="error"> You've entered an incorrect username or password.
                  Please try again.
               </h3>
            <% }%>
             
            <!-- redirect to create a new account -->
            <p>
               New to The Sourcerer's Source? 
               <a href="/signup">Create an account.</a> 
            </p>
            
         </div> <!-- end inner container -->
      </div> <!-- end login display container -->
       
   <%- include('partials/footer.ejs') %>
   </body>
</html>